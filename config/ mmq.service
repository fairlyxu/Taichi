[Unit]
Description=AI  Task Server
After=network.target syslog.target

[Service]
EnvironmentFile=/etc/systemd/system/mmqload.conf
User=root
# 运行jar包的指令
ExecStart=/usr/bin/python3 /data/Taichi/app_mmq.py
# 收到正常停止命令时不自动重启(systemctl stop 时不会自动重启)
SuccessExitStatus=143
# 在服务失败时自动重启
Restart=on-failure
# 重启前等待10秒
RestartSec=10
# 重启尝试间隔时间
StartLimitInterval=10
# 间隔时间内的最大重启尝试次数
StartLimitBurst=3


[Install]
WantedBy=multi-user.target
